<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= render 'form', post: @post %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%= render post %> <!-- Vista parcial va sin comillas por la variable post -->
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class:'btn btn-primary btn-sm' %>
